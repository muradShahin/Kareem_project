<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kareem_school" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue_dark</item>
        <item name="colorPrimaryVariant">@color/main_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_orange_dark</item>
        <item name="colorSecondaryVariant">@color/main_orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>
    <style name="MyButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorPrimary">?attr/colorSecondaryVariant</item>
    </style>

    <style name="MyFloatingPoint" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/FloatingPointStyle</item>
    </style>
    <style name="FloatingPointStyle">
        <item name="colorSecondary">?attr/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

</resources>